{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "",

   "title": {
    "text": "Percentage of people with a Bachelor's diploma",
    "subtitle":"Source: Wikipedia",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "#000000",
    "subtitleColor":"#c55c15"},

  "config": {
    "background":"rgb(250, 243, 250)",
    "view": {
      "stroke": "transparent"}},


  "data": {
    "url": "https://raw.githubusercontent.com/natalytsangarides/natalytsangarides.github.io/main/my_csv1.csv",
    "format": {"type":"csv"}
    },


  "height": 300,
  "width": 280,


 "mark":{
     "type": "bar",
     "width":15
     },

  "encoding": {
    "x": {
      "field": "state",
      "type": "nominal",
      "axis": {"grid": false},
        "title": "State"

      },

    "y": {
      "field": "BSC percentage",
       "type": "quantitative",
        "title": "Percentage",
        "sort": {"encoding": "y", "order": "descending"},
        "axis": {"grid": false}
    },
        "color": {
      "field": "state",
      "type": "nominal",
      "legend":"",
      "scale":{"scheme":"plasma"}
      }
    }

  }
