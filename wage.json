{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "",

   "title": {
    "text": "Average Annual Wage",
    "subtitle":"Source: OECD, Rebased, 2000=100.",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "#000000",
    "subtitleColor":"#c55c15"},

  "config": {
    "background":"rgb(250, 243, 250)",
    "view": {
      "stroke": "transparent"}},

  "data": {"url": "https://raw.githubusercontent.com/natalytsangarides/natalytsangarides.github.io/main/wages.csv",
  "format": {"type":"csv"}},

   "height": 300,
  "width": 300,

   "transform": [
  {"calculate": "year(datum.TIME)", "as": "year"},
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"}],

"params": [    
      {"name":"minYear", "value":2000,
         "bind":{
           "input": "range",
           "min": 2000, 
           "max": 2019, 
           "step": 1,
           "name": "Start year:"}
      },
  
      {"name":"maxYear", "value":2020,
         "bind":{
           "input": "range",
           "min": 2001, 
           "max": 2020, 
           "step": 1,
           "name": "End year:"}
      }
    ],


   "encoding": {
    "x": {"field": "TIME", "type": "temporal", "title": "", "axis":{"grid": true, "gridColor": "darkgrey"}},
    "y": {"field": "Value", "type": "quantitative", "title": "", "axis":{"grid": true, "gridColor": "darkgrey"},
    "scale":{"domain":[90,170]}},
    "color": {
      "condition": {
        "param": "hover",
        "field":"Country",
        "type":"nominal",
        "scale":{"scheme":"plasma"}
      },
      "value": "grey"
    },
    "tooltip":[{"field":"Country"},{"field":"Wage"}],
    "opacity": {
      "condition": {
        "param": "hover",
        "value": 1
      },
      "value": 0.2
    }
  },
  "layer": [{
    "description": "transparent layer to make it easier to trigger selection",
    "params": [{
      "name": "hover",
      "value": [{"Country": "Germany"}],
      "select": {
        "type": "point",
        "fields": ["Country"],
        "on": "mouseover"
      }
    }],
    "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
  }, {
    "mark": "line"
  }, {
    "encoding": {
      "x": {"aggregate": "max", "field": "TIME"},
      "y": {"aggregate": {"argmax": "TIME"}, "field": "Value"}
    },
    "layer": [{
      "mark": {"type": "line"}
    }]
  }]
}
